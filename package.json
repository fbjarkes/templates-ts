{
    "dependencies": {
        "@types/node": "^18.7.18",
        "@types/yargs": "^17.0.8",
        "dotenv": "^16.0.2",
        "tsc": "^2.0.3",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.8.0",
        "@typescript-eslint/parser": "^5.8.0",
        "chai": "^4.3.4",
        "eslint": "^8.23.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.7.1",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "lodash": "^4.17.20",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "ts-node": "^10.9.1",
        "ts-sinon": "^2.0.2",
        "typescript": "^4.5.4"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,md,css}": [
            "npx prettier --write",
            "eslint --fix"
        ]
    },
    "scripts": {
        "build": "tsc",
        "index": "tsc && node dist/index.js",
        "start": "npm run build && node dist/index.js",
        "test": "mocha -r ts-node/register src/**/*.test.ts",
        "nuke": "rm -rf dist coverage node_modules package-lock.json yarn.lock .nyc_output",
        "coverage": "nyc --check-coverage --lines=70 mocha -r ts-node/register src/**/*.test.ts",
        "lint": "eslint **/*.ts",
        "prepare": "husky install"
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "**/*.test.ts"
        ],
        "extension": [
            ".ts"
        ],
        "reporter": [
            "json-summary",
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true
    }
}
